<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/search_bar</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/search_bar</item> <!-- Whatever color you want-->
    </style>
    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/color_text_primary</item><!-- Custom Attr-->
        <item name="fontPath">fonts/Lato.ttf</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="fontPath">fonts/Lato.ttf</item>
    </style>

    <style name="Text.Primary.Bold">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/Lato-Medium.ttf</item>
    </style>

    <style name="Text.Primary.extraBold">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>


</resources>
